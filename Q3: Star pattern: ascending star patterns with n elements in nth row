/* WAP to print the following pattern, where the number of such lines needs to be read from the keyboard. 
* 
*   * 
*   *   * 
*    *   *   *      */

#include <stdio.h>
int main(){
    int n;
    printf("Enter the number of rows and number of elements in the last row.\n");
    scanf("%d",&n);
    
    printf("Output:\n");
    for(int i=1; i<=n; i++)//Number of rows
    {
        for(int j=1; j<=i; j++)//Number of stars in the row = number of rows
        {
            printf("*\t");
        }
        printf("\n");
    }
    return 0;
}
