// WAP to find the length (number of characters) of your name without using string library function.
#include <stdio.h>

int main() {
    char name[100];
    int length = 0, i = 0;

    // Input the name
    printf("Enter your name: ");
    scanf("%[^\n]s", name); // Reads the input including spaces

    // Calculate the length of the string
    while (name[i] != '\0') {
        length++;
        i++;
    }

    // Output the length
    printf("The length of your name is: %d\n", length);

    return 0;
}
